# EventFlow EditorConfig
root = true

# All
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go
[*.go]
indent_style = tab
indent_size = 4

# YAML (docker-compose, k8s)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Makefile
[Makefile]
indent_style = tab

# SQL (migrations)
[*.sql]
indent_style = space
indent_size = 2

# Shell (scripts)
[*.sh]
indent_style = space
indent_size = 2
