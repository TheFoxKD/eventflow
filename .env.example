# EventFlow Configuration
# Copy this file to .env and update values for your environment

# Database Configuration
# PostgreSQL database host
DB_HOST=127.0.0.1

# PostgreSQL database port (default PostgreSQL port)
DB_PORT=5432

# Database name for EventFlow
DB_NAME=eventflow

# Database username
DB_USER=eventflow_user

# Database password
DB_PASSWORD=eventflow_password

# Database SSL mode
DB_SSLMODE=disable

# Application Configuration

# HTTP server port
SERVER_PORT=8080

# gRPC server port
GRPC_PORT=9090

# Application environment (development, staging, production)
APP_ENV=development

# Authentication Configuration

# JWT secret key for token signing (generate strong secret for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT access token expiration time (e.g., 15m, 1h, 24h)
JWT_ACCESS_EXPIRY=15m

# JWT refresh token expiration time (e.g., 24h, 7d, 30d)
JWT_REFRESH_EXPIRY=7d

# Messaging Configuration

# Kafka broker addresses (comma-separated for multiple brokers)
KAFKA_BROKERS=127.0.0.1:9092

# Kafka consumer group ID
KAFKA_CONSUMER_GROUP=eventflow-consumers

# RabbitMQ connection URL
RABBITMQ_URL=amqp://guest:guest@127.0.0.1:5672/

# Logging Configuration

# Log level (debug, info, warn, error, fatal, panic)
LOG_LEVEL=info

# Log format (json, text)
LOG_FORMAT=json

# External Services Configuration

# Email service configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password

# SMS service configuration
# ...

# Monitoring Configuration

# Prometheus metrics endpoint enable (true/false)
METRICS_ENABLED=true

# Metrics server port
METRICS_PORT=2112
